<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/textura_2"
    android:scrollbars="horizontal|vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical" >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="0,1,2" >

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/CABECERA"
                android:gravity="center"
                android:paddingBottom="3dp"
                android:paddingTop="3dp" >

                <TextView
                    android:id="@+id/txv_mensaje_reserva"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingBottom="9dp"
                    android:paddingTop="9dp"
                    android:text="CREATIVIDAD"
                    android:textAllCaps="true"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/LETRA"
                    android:textSize="22sp" />

            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center" >

                <TextView
                    android:id="@+id/txv_cabecera_descripcion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="@string/pensamiento"
                    android:textColor="@color/letras_funtes"
                    android:textSize="22sp" />

            </TableRow>

            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/txv_pensamiento"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="es un lindo y bello pensamiento "
                    android:textColor="@color/letras_funtes"
                    android:textSize="20sp" />

            </TableRow>
        </TableLayout>

        <TextView
            android:id="@+id/txv_autor_pensamiento"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:layout_marginTop="8dp"
            android:gravity="right"
            android:paddingRight="20dp"
            android:text="Anonimo"
            android:textColor="@color/letras_funtes"
            android:textSize="18sp"
            android:textStyle="bold|italic" />

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="vertical"
            android:stretchColumns="0,1,2" >

            <TableRow
                android:id="@+id/tableRow4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/txv_compartir_pensamiento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@color/twitter"
                    android:clickable="true"
                    android:drawableBottom="@drawable/compartir"
                    android:paddingBottom="13dp"
                    android:textColor="@color/LETRA" />

                <TextView
                    android:id="@+id/txv_ir_evaluacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/gmail"
                    android:drawableBottom="@drawable/evaluacion"
                    android:gravity="center"
                    android:paddingBottom="13dp"
                    android:textColor="@color/LETRA" />

                <TextView
                    android:id="@+id/txv_ir_libro_referencia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="@color/CABECERA"
                    android:drawableBottom="@drawable/libros_ref"
                    android:gravity="center"
                    android:paddingBottom="13dp"
                    android:textColor="@color/LETRA" />

            </TableRow>

        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/txv_redes_sociales"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="20dp"
                    android:text="Plan de Lectura Anual de la Biblia:"
                    android:textColor="@color/twitter"
                    android:textSize="19sp" />

                <TextView
                    android:id="@+id/txv_plan_lectura"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="3dp"
                    android:gravity="left"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:text="hgewry jhewrguw"
                    android:textColor="@color/letras_funtes"
                    android:textSize="20sp" />

            </LinearLayout>

        </TableLayout>

    </LinearLayout>

</ScrollView>