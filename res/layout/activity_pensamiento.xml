<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/FONDO"
    tools:context="com.example.agendacaracter.Pensamiento" >
    
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/FONDO"
    android:orientation="vertical"
    tools:context="com.example.agendacaracter.MainActivity" >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="0,1,2" >

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/CABECERA"
            android:gravity="center" >

             <TextView
                 android:id="@+id/textView1"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center_horizontal"
                 android:layout_marginRight="@dimen/right_cab"
                 android:background="@color/CABECERA"
                 android:paddingBottom="10dp"
                 android:paddingLeft="35dp"
                 android:paddingRight="18dp"
                 android:paddingTop="10dp"
                 android:tag="26dp"
                 android:text="@string/pensamiento"
                 android:textColor="@color/LETRA"
                 android:textColorLink="@color/LETRA"
                 android:textSize="24sp"
                 android:textStyle="bold" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/txt_Pensamiento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textColor="@color/LETRA"
                android:textSize="16sp" />
               

        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/txt_AutorPensamiento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:layout_marginTop="8dp"
        android:gravity="right"        
        android:textColor="@color/LETRA"
        android:textStyle="bold|italic" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="vertical"
        android:stretchColumns="0,1,2" >

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/CABECERA"
                android:clickable="true"
                android:drawableBottom="@drawable/share_64"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:textColor="@color/LETRA"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/facebook"
                android:drawableBottom="@drawable/share_64"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:textColor="@color/LETRA"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/gmail"
                android:drawableBottom="@drawable/view_as_list_64"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:textColor="@color/LETRA"
                android:textSize="10sp" />

        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical" >

    </LinearLayout>

</LinearLayout>
</ScrollView>