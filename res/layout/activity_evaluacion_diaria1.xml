<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/degradado" >
    
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txt_cabecera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/CABECERA"
        android:gravity="center_horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="@string/evaluacion_diaria"
        android:textColor="@color/LETRA"
        android:textColorLink="@color/LETRA"
        android:textSize="21sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_introduccion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/LETRA"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="14dp"
        android:text="¿Quieres desarrollar esta cualidad en tu vida? Responde las siguientes preguntas:"
        android:textColor="@color/letras_inicio"
        android:textSize="21sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_especificaciones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/LETRA"
        android:gravity="center"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="14dp"
        android:text="1 Nada       -       2 Muy poco       -       3 Algo        -       4 Casi siempre       -       5 Siempre"
        android:textColor="@color/FONDO"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txv_pregunta_01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:text="1. ¿Cuánto de esta cualidad manifestaste a las personas el día de hoy?"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/CABECERA"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal" >

        <RadioGroup
            android:id="@+id/rdbg_grupo_puntaje_01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/rdb_puntaje_01_1"
                style="@color/LETRA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-10dp"
                android:checked="true"
                android:shadowColor="@color/CABECERA"
                android:text="1"
                android:textColor="@color/LETRA"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/rdb_puntaje_01_2"
                style="@color/YELLOW"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="2"
                android:textColor="@color/LETRA"
                android:textColorHint="@color/YELLOW"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/rdb_puntaje_01_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="3"
                android:textColor="@color/LETRA"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/rdb_puntaje_01_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="4"
                android:textColor="@color/LETRA"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/rdb_puntaje_01_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="5"
                android:textColor="@color/LETRA"
                android:textSize="18sp" />

        </RadioGroup>
    </LinearLayout>

    <TextView
        android:id="@+id/txv_pregunta_02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:text="2. ¿Existió hoy alguna situación o circunstancia en la que aplicaste esta cualidad?"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/CABECERA"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal" >

        <RadioGroup
            android:id="@+id/rdbg_grupo_puntaje_02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/rdb_puntaje_02_1"
                style="@color/LETRA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-10dp"
                android:checked="true"
                android:shadowColor="@color/CABECERA"
                android:text="1"
                android:textColor="@color/LETRA"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/rdb_puntaje_02_2"
                style="@color/YELLOW"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="2"
                android:textColor="@color/LETRA"
                android:textColorHint="@color/YELLOW"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/rdb_puntaje_02_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="3"
                android:textColor="@color/LETRA"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/rdb_puntaje_02_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="4"
                android:textColor="@color/LETRA"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/rdb_puntaje_02_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="5"
                android:textColor="@color/LETRA"
                android:textSize="18sp" />

        </RadioGroup>
    </LinearLayout>

    <Button
        android:id="@+id/btn_siguiente"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="25dp"
        android:background="@color/gmail"
        android:minHeight="40dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Resultado"
        android:textColor="@color/LETRA"
        android:textSize="20sp" />

</LinearLayout>
</ScrollView>