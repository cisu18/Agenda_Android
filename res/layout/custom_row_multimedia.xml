<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imv_imagen_multimedia"
        android:layout_width="90dp"
        android:layout_height="130dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/txv_nombre_multimedia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imv_imagen_multimedia"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="60dp"
        android:layout_toRightOf="@+id/imv_imagen_multimedia"
        android:text="TextView"
        android:textAllCaps="false"
        android:textColor="@color/letras_funtes"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txv_genero_multimedia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imv_imagen_multimedia"
        android:layout_alignLeft="@+id/txv_nombre_multimedia"
        android:text="TextView"
        android:textColor="@color/letras_funtes"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txv_id_multimedia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txv_genero_multimedia"
        android:layout_below="@+id/txv_genero_multimedia" />

</RelativeLayout>
