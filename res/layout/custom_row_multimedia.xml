<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/personalizarlistview"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imv_imagen_multimedia"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/txv_id_multimedia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imv_imagen_multimedia"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@+id/imv_imagen_multimedia" >

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/txv_titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TÃ­tulo:"
                android:textColor="@color/letras_funtes"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txv_nombre_multimedia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="16dp"
                android:paddingTop="10dp"
                android:text="TextView"
                android:textAllCaps="false"
                android:textColor="@color/letras_funtes"
                android:textSize="18sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:paddingTop="15dp" >

            <TextView
                android:id="@+id/txv_genero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text=""
