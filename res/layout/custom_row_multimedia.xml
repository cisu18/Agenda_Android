<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/personalizarlistview"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imv_imagen_multimedia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/txv_id_multimedia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imv_imagen_multimedia"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/imv_imagen_multimedia" >

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/txv_nombre_multimedia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:paddingTop="7dp"
                android:textAllCaps="false"
                android:textColor="@color/letras_funtes"
                android:textSize="18sp"
                android:text="Agenda caracter 2015" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:paddingTop="10dp" >

            <TextView
                android:id="@+id/txv_autor_multimedia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textColor="@color/letras_funtes"
                android:textSize="17sp"
                android:text="Classic Vintage"/>

            <TextView
                android:id="@+id/txv_edicion_multimedia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:textColor="@color/letras_funtes"
                android:textSize="17sp"
                android:text="CLM Editores" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>