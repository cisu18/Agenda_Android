<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/textura_2"
    android:orientation="vertical"
    tools:context="com.example.agendacaracter.ListaCualidades" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp" >

        <TextView
            android:id="@+id/txv_cabecera_descripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/CABECERA"
            android:gravity="center_horizontal"
            android:paddingBottom="13dp"
            android:paddingTop="13dp"
            android:tag="26dp"
            android:text="@string/lista_cualidades"
            android:textColor="@color/LETRA"
            android:textColorLink="@color/LETRA"
            android:textSize="22sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ListView
        android:id="@+id/lsv_cualidades"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="18dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp" >

    </ListView>

</LinearLayout>