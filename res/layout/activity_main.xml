<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/FONDO"
    android:scrollbars="horizontal|vertical"
    tools:context="com.example.agendacaracter.MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical|center_horizontal"
        android:background="@color/FONDO"
        android:orientation="vertical"
        android:paddingBottom="30dp">

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stretchColumns="0,1,2" >

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/CABECERA"
                android:gravity="center" >

                <TextView
                    android:id="@+id/txt_Fecha_Movil"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@color/CABECERA"
                    android:gravity="center_horizontal"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:tag="26dp"
                    android:textAllCaps="true"
                    android:textColor="@color/LETRA"
                    android:textColorLink="@color/LETRA"
                    android:textSize="24sp"
                    android:textStyle="bold" />

            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:background="@color/LETRA"
                android:gravity="center" >

                <TextView
                    android:id="@+id/txt_Nombre_Cualidad"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:textAllCaps="true"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </TableRow>

            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/txt_Versiculo_Diario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textColor="@color/LETRA"
                    android:textSize="20sp" />

            </TableRow>
        </TableLayout>

        <TextView
            android:id="@+id/txt_Numero_Versiculo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:layout_marginTop="8dp"
            android:gravity="right"
            android:textColor="@color/LETRA"
            android:textSize="18sp"
            android:textStyle="bold|italic" />

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="vertical"
            android:stretchColumns="0,1,2" >

            <TableRow
                android:id="@+id/tableRow4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/txt_Compartir_Versiculo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/CABECERA"
                    android:clickable="true"
                    android:drawableBottom="@drawable/compartir"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:textColor="@color/LETRA"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/txt_Pensamiento_Diario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/LETRA"
                    android:drawableBottom="@drawable/pensamiento"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:textColor="@color/LETRA"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/txtEvaluacionDiaria"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/CABECERA"
                    android:drawableBottom="@drawable/evaluacion"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:textColor="@color/LETRA"
                    android:textSize="10sp" />

            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/lbl_Plan_Lectura"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:text="PLAN DE LECTURA:"
                android:textColor="@color/LETRA"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txt_Plan_Lectura"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/LETRA"
                android:textSize="18sp" />

        </LinearLayout>
    </LinearLayout>

</ScrollView>