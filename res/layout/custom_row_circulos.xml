<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/ubicacion" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/imageView1"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/txv_ciudad_circulo"
        android:src="@drawable/responsable" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/imageView2"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/txv_ciudad_circulo"
        android:src="@drawable/horario" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/imageView3"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/txv_ciudad_circulo"
        android:src="@drawable/telefono" />

        <TextView
            android:id="@+id/txv_ciudad_circulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView1"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/imageView1"
            android:text="Ciudad"
            android:textColor="@color/letras_funtes"
            android:textSize="14sp" />

    <TextView
        android:id="@+id/txv_encragado_circulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txv_ciudad_circulo"
        android:layout_alignTop="@+id/imageView2"
        android:text="Encargado"
        android:textColor="@color/letras_funtes"
        android:textSize="14sp" />
        
            <TextView
                android:id="@+id/txv_direccion_circulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/txv_encragado_circulo"
                android:layout_alignTop="@+id/imageView3"
                android:text="Direccion"
                android:textColor="@color/letras_funtes"
                android:textSize="14sp" />
        
    <TextView
        android:id="@+id/txv_telefono_circulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txv_direccion_circulo"
        android:layout_alignTop="@+id/imageView4"
        android:layout_marginTop="3dp"
        android:text="Telefono"
        android:textColor="@color/letras_funtes"
        android:textSize="14sp" />

</RelativeLayout>
