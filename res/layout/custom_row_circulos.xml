<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imv_ubicacion"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/ubicacion" />

    <ImageView
        android:id="@+id/imv_responsable"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/imv_ubicacion"
        android:layout_marginTop="25dp"
        android:layout_toLeftOf="@+id/txv_ciudad_circulo"
        android:src="@drawable/responsable" />

    <ImageView
        android:id="@+id/imv_horario"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/imv_responsable"
        android:layout_marginTop="9dp"
        android:layout_toLeftOf="@+id/txv_ciudad_circulo"
        android:src="@drawable/horario" />

    <ImageView
        android:id="@+id/imv_telefono"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/imv_horario"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="8dp"
        android:layout_toLeftOf="@+id/txv_ciudad_circulo"
        android:src="@drawable/telefono" />

        <TextView
            android:id="@+id/txv_ciudad_circulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imv_ubicacion"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@+id/imv_ubicacion"
            android:textColor="@color/letras_funtes"
            android:textSize="14sp" />

    <TextView
        android:id="@+id/txv_encragado_circulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txv_ciudad_circulo"
        android:layout_alignTop="@+id/imv_responsable"        
        android:textColor="@color/letras_funtes"
        android:textSize="14sp" />
        
            <TextView
                android:id="@+id/txv_direccion_circulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/txv_encragado_circulo"
                android:layout_alignTop="@+id/imv_horario"
                android:textColor="@color/letras_funtes"
                android:textSize="14sp" />
        
    <TextView
        android:id="@+id/txv_telefono_circulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txv_direccion_circulo"
        android:layout_alignTop="@+id/imv_telefono"
        android:layout_marginTop="3dp"
        android:textColor="@color/letras_funtes"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/txv_linea_base"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imv_telefono"
        android:layout_marginRight="15dp"
        android:background="@color/CABECERA" />

</RelativeLayout>
