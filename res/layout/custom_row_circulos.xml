<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/masrosa" />


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_below="@+id/imageView1"
        android:layout_marginTop="14dp"
        android:layout_toLeftOf="@+id/txv_ciudad_circulo"
        android:src="@drawable/add" />


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_below="@+id/imageView2"
        android:layout_marginTop="18dp"
        android:layout_toLeftOf="@+id/txv_ciudad_circulo"
        android:src="@drawable/cara_01" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_below="@+id/imageView3"
        android:layout_marginTop="16dp"
        android:layout_toLeftOf="@+id/txv_ciudad_circulo"
        android:src="@drawable/codigo_64" />

        <TextView
        android:id="@+id/txv_ciudad_circulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView1"
        android:layout_marginLeft="44dp"
        android:layout_toRightOf="@+id/imageView1"
        android:text="Ciudad" />

    <TextView
        android:id="@+id/txv_encragado_circulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txv_ciudad_circulo"
        android:layout_alignTop="@+id/imageView2"
        android:text="Encargado" />
        
            <TextView
        android:id="@+id/txv_direccion_circulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txv_encragado_circulo"
        android:layout_alignTop="@+id/imageView3"
        android:text="Direccion" />
        
    <TextView
        android:id="@+id/txv_telefono_circulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txv_direccion_circulo"
        android:layout_alignTop="@+id/imageView4"
        android:text="Telefono" />

</RelativeLayout>
