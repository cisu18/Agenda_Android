<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/textura_2" >
    
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="5dp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txv_cabecera_descripcion"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/CABECERA"
        android:gravity="center_horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:tag="26dp"
        android:text="@string/descripcion__libros"
        android:textColor="@color/LETRA"
        android:textColorLink="@color/LETRA"
        android:textSize="22sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp" >

        <ImageView
            android:id="@+id/imv_libro_descripcion"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="65dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txv_titulo_libro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Las 21 Leyes Irrefutables de Liderazgo"
                android:textColor="@color/letras_funtes"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txv_autor_libro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="John Maxwell"
                android:textColor="@color/letras_funtes"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/txv_edicion_libro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="Segunda Edición"
                android:textColor="@color/letras_funtes"
                android:textSize="17sp" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/txv_descripcion_libro"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="left"
        android:text="&apos;&apos;Tener iniciativa me ayudó a crecer a mí en mis veinte, en mis treinta me ayudó a "
        android:textColor="@color/letras_funtes"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/txv_mensaje_reserva"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Reserva tu Compra:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/twitter"
        android:textSize="17sp" />

    <Button
        android:id="@+id/btn_reserva_aqui"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        android:layout_marginTop="15dp"
        android:background="@color/gmail"
        android:gravity="center"
        android:text="AQUÍ"
        android:textColor="@color/LETRA" />

</LinearLayout>
</ScrollView>