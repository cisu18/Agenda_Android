<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/textura_2"
    android:orientation="vertical" >

 <TextView
     android:id="@+id/txv_cabecera_descripcion"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_marginLeft="15dp"
     android:layout_marginRight="15dp"
     android:layout_marginTop="16dp"
     android:background="@color/CABECERA"
     android:gravity="center"
     android:paddingBottom="13dp"
     android:paddingLeft="25dp"
     android:paddingRight="18dp"
     android:paddingTop="13dp"
     android:tag="26dp"
     android:text="@string/circulo_crecimiento"
     android:textColor="@color/LETRA"
     android:textColorLink="@color/LETRA"
     android:textSize="22sp" />

    <GridView
        android:id="@+id/grv_Lista_Circulos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="2"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" >

    </GridView>

</LinearLayout>