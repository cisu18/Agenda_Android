<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/textura_2" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txv_mensaje_carita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="¡Excelente!"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/letras_inicio"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/img_carita_resultado_evaluacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/cara2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
        	android:orientation="vertical" 
            android:gravity="center_horizontal" >

            <TextView
                android:id="@+id/txv_resultado_evaluacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="Tu avance personal de hoy es: 100% "
                android:textColor="@color/letras_funtes"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txv_label_recomendacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="12dp"
                android:text="Recomendación:"
                android:textColor="@color/twitter"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txv_recomendacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="3dp"
                android:text="Es una oportunidad de Iniciar tu cambio personal."
                android:textColor="@color/letras_funtes"
                android:textSize="20sp" />
            
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

        <Button
            android:id="@+id/btn_compartir_puntaje"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="40dp"
            android:background="@color/gmail"
            android:gravity="center"
            android:text="Compartir"
            android:textColor="@color/LETRA"
            android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>